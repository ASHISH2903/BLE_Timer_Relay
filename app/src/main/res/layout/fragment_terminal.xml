<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Connection Status:"
            android:textStyle="bold" />

        <View
            android:layout_width="7dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/status_connected"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/connection_off" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainPageline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rel3"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/config_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="CONFIG"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/setup_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="SETUP"

                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/logout_btn"
                style="@style/BlueButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="LOGOUT"

                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dcs_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="DCS Setting"

                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/relay_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="Relay Status"

                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/reset_password_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="RESET PASSWORD"

                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="7dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/clear_eeprom_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/on"
                android:text="CLEAR"

                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relay_status_linear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Receive Message List-->
        <TextView
            android:id="@+id/receive_text"

            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:freezesText="false"
            android:gravity="top"
            android:scrollbars="vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/send_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="text|textNoSuggestions"
                android:singleLine="true"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_send_white_24dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_linear_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter Password"

            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/edt_txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <View
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/login_to_device"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/on"
            android:enabled="true"
            android:text="LOGIN"

            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_password_linear_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter New Password"

            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/edt_txt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword" />

        <View
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/reset_password"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/on"
            android:enabled="true"
            android:text="CHANGE"

            android:textSize="12sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/Rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lvNewDevices"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginTop="20dp"
                    android:fitsSystemWindows="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/setup_linear_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rel3"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SETUP"

                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center"
                        android:text="Auto Start"

                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.15" />

                    <CheckBox
                        android:id="@+id/autostart_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center"
                        android:text="Power On"

                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.15" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/Radio_hold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOLD"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/Radio_reset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RESET"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </RadioGroup>

                    <!-- <Button
                         android:id="@+id/send_radio"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Send"/>-->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:text="Relay Status"

                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Relay_Status_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="1"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="2"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="3"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="4"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Relay_Status_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="5"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="6"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="7"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/Relay_Status_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="8"
                        android:textColor="#273302"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="START"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btn_hold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="HOLD"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btn_reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="RESET"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/config_linear_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setup_linear_page"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CONFIGURATION"

                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/list_of_relay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <!-- <Button
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Select"
                         android:id="@+id/select_relay"/> -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="Transition Time"

                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_txt_on"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/relay_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/on"
                    android:text="SEND"
                    android:textColor="#273302"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="ACTIVE RELAY"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="15dp">

                        <CheckBox
                            android:id="@+id/checked1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <CheckBox
                            android:id="@+id/checked8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/active_relay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/on"
                        android:text="SEND"
                        android:textColor="#273302"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TIME"

                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <EditText
                        android:id="@+id/select_time"
                        android:layout_marginTop="10dp"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Select time (HH:MM:SS)"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/total_time_cycle"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="SEND"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="SAVE"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btn_load"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/on"
                        android:text="LOAD"
                        android:textColor="#273302"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dcs_linear_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/config_linear_page"
